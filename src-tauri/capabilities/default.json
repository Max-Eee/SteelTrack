{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "sql:default",
    "sql:allow-load",
    "sql:allow-execute",
    "sql:allow-select",
    "sql:allow-close",
    "fs:allow-appdata-write",
    "fs:allow-appdata-read",
    "fs:allow-appdata-meta",
    "fs:allow-mkdir",
    "fs:allow-exists",
    "fs:allow-copy-file",
    "fs:allow-create",
    "fs:allow-write-file",
    "fs:allow-read-file",
    "fs:allow-resource-read-recursive",
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "core:path:default",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$EXE/**"
        },
        {
          "path": "$RESOURCE/**"
        },
        {
          "path": "data/**"
        },
        {
          "path": "./data/**"
        },
        {
          "path": "../data/**"
        },
        {
          "path": "st_detail.db"
        },
        {
          "path": "./st_detail.db"
        },
        {
          "path": "**"
        }
      ]
    }
  ]
}
