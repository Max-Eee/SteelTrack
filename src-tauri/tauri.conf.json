{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "st-detail",
  "version": "0.1.0",
  "identifier": "com.st-detail.app",  "build": {
    "beforeDevCommand": "npm run dev:setup",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "st-detail",
        "width": 800,
        "height": 600,
        "maximized": true
      }
    ],
    "security": {
      "csp": null
    }
  },  "plugins": {
    "sql": {
      "scope": {        "allowedPaths": [
          "./data", 
          "./data/st_detail.db",
          "data",
          "data/st_detail.db"        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": []
  }
}
